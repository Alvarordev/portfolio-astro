---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<header class="flex items-center gap-3 pb-6">
  <div class="dark:bg-primary bg-accent h-3 w-3 rounded-full shadow"></div>
  <h3 class="text-xl font-medium ">{title}</h3>
</header>

<style>
  .shadow {
    box-shadow: 0 0 20px var(--accent);
  }
</style>
